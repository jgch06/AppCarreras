<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorAppBackground</item>
        <item name="android:statusBarColor">@color/colorMicrosoftBlue</item>
        <item name="android:colorControlHighlight">@color/colorTitle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="TextBox">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/colorMicrosoftBlue</item>
    </style>

    <style name="LinearLayoutSpacing">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CardViewSeparatorTitle">
        <item name="android:backgroundTint">@color/colorCardviewTitle</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:stateListAnimator">@drawable/lift_on_touch</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CardViewSeparatorText">
        <item name="android:backgroundTint">@color/colorCardviewTitle</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:stateListAnimator">@drawable/lift_on_touch</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CardViewSeparatorImage">
        <item name="android:backgroundTint">@color/colorTranslucent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:stateListAnimator">@drawable/lift_on_touch</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>

    <style name="AppButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorMicrosoftBlue</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorTitle</item>
        <item name="android:background">@color/colorCardviewTitle</item>
    </style>

</resources>
