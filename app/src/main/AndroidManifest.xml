<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cr.ac.tec.vis_u">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activities.LogoSplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.SectionMenuActivity" />
        <activity android:name=".Activities.SectionActivity" />
        <activity android:name=".Activities.SubsectionActivity" />
        <activity android:name=".Activities.SectionImageActivity" />
        <activity android:name=".Activities.SectionVideoActivity" />
        <activity android:name=".Activities.InternetConnectionActivity" />
        <activity android:name=".Activities.SectionAbout"/>
    </application>

</manifest>